<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addTaskNew"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="50dp"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/login" />

        <TextView
            android:id="@+id/guests_txt"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fontFamily="@font/moondancefont"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Add a guest"
            android:textSize="45dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/guestName"
        fontPath="fonts/nunito_light.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:text="Guest Name"
        android:textColor="@color/black"
        android:fontFamily="@font/moondancefont"
        android:textStyle="bold"
        android:textSize="25dp"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/addGuestName"
        fontPath="fonts/nunito_light.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_border"
        android:minHeight="48dp"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="MissingPrefix,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/amount"
        fontPath="fonts/nunito_light.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/moondancefont"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Number of Persons"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/addPersons"
        fontPath="fonts/nunito_light.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_border"
        android:minHeight="48dp"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="MissingPrefix,SpeakableTextPresentCheck" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/moondancefont"
        android:text="Confirmed"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/createGuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/moondancefont"
        android:textStyle="bold"
        android:text="Add guest"
        android:textColor="@color/black" />

</LinearLayout>
</ScrollView>